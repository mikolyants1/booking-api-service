generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Booking {
  id           String   @id @default(uuid())
  restaurant   String   @db.VarChar(255)
  status       Status   @default(CREATED)
  date         DateTime
  guests       Int

  @@index([date])
}

enum Status {
  CREATED
  CHECKING_AVAILABILITY
  CONFIRMED
  REJECTED
}
